<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FuncActivity">

    <FrameLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="645dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tap_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tap_menu_bg"
            android:drawableTop="@mipmap/tap_order_normal"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/tap_order"
            android:textColor="@drawable/tap_menu_text" />

        <TextView
            android:id="@+id/tap_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tap_menu_bg"
            android:drawableTop="@mipmap/tap_add_normal"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/tap_add"
            android:textColor="@drawable/tap_menu_text" />

        <TextView
            android:id="@+id/tap_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tap_menu_bg"
            android:drawableTop="@mipmap/tap_user_normal"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/tap_user"
            android:textColor="@drawable/tap_menu_text" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>